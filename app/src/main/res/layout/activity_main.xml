<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:ignore="ExtraText">
    <TextView
        android:textSize="20dp"
        android:id="@+id/main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Крестики-нолики"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="250dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:textSize="20dp"
        android:text="Играть против компьютера"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/ChangeActivityComputer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main"
        android:layout_marginTop="80dp"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/ChangeActivityPlayer"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Играть против игрока"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ChangeActivityComputer"
        android:layout_marginTop="40dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>